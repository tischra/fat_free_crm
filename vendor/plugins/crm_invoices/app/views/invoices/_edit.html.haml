.title
  %span
    Edit Invoice
.remote
  - remote_form_for(@invoice) do |f|
    = link_to_close edit_invoice_path(@invoice)
    = f.hidden_field :user_id
    = f.error_messages
    = render :partial => "invoices/top_section", :locals => { :f => f, :edit => true }
    = render :partial => "invoices/extra",       :locals => { :f => f, :edit => true }
    = render :partial => "invoices/permissions", :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save invoice", :onclick => %/$("account_assigned_to").value = $F("invoice_assigned_to")/
      or
      = link_to_cancel edit_invoice_path(@invoice)
