- edit ||= false
- collapsed = session[:invoice_extra].nil? # && @invoice.errors.empty?
= subtitle :invoice_extra, collapsed, "Extra Information"
.section
  %small#invoice_extra_intro{ hidden_if(!collapsed) }
    = "You can add extra invoice information later." unless edit
  #invoice_extra{ hidden_if(collapsed) }
    %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
      %tr
        %td{ :valign => :top }
          .label Invoice Address:
          = f.text_area :invoice_address, :style =>"width:240px", :rows => 3
        %td= spacer
        %td{ :valign => :top }
          .label Description:
          = f.text_area :description, :style =>"width:240px", :rows => 3
