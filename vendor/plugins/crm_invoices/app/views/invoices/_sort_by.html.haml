- sort_by_menu_items = ["Title", "Total", "Date Due", "Date Sent", "Status", "Description", "Date Created", "Date Updated"].inject([]) do | items, sort_by|
  - items << %Q[{ name: "#{sort_by}", on_select: function() { #{redraw(:sort_by, sort_by.downcase!)} } }]

:plain
  new crm.Menu({
    trigger   : "sort_by",
    fade      : 0.2,
    appear    : 0.2,
    menu_items: [ #{sort_by_menu_items.join(",")} ]
  });
